      %script{:src => "https://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"}

  %body
    %noscript
      #noscript_warning This site requires JavaScript to be enabled.
    #wrapper
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
              - 3.times do
                %span.icon-bar
            %a.brand{:href => "/"} 4e
            -#.nav-collapse.collapse
              %ul.nav
                %li
                  %a{href: '/update'} Update
      .container
        #main
          %br
          %br
          %br
          -# [:success, :notice, :alert, :error].each do |f|
            - if flash[f]
              .flash{class: f}= flash[f]
          = yield
          %footer.pull-right 2013
